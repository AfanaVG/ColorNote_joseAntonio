<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul6"
    tools:context=".NotaSimpleActivity">

    <TextView
        android:id="@+id/txtNombre_notaSimple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <EditText
        android:id="@+id/txtCotenido_notaSimple"
        android:layout_width="307dp"
        android:layout_height="531dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/texto_borde"
        android:ems="10"
        android:fontFamily="@font/oldnews"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:textColor="@color/azul1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombre_notaSimple"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnGuardar_NotaSimple"
        android:layout_width="125dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/oldnews"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="@+id/txtCotenido_notaSimple"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txtCotenido_notaSimple"
        app:layout_constraintTop_toBottomOf="@+id/txtCotenido_notaSimple" />

    <Button
        android:id="@+id/btnCancelar_NotaSimple"
        android:layout_width="134dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/oldnews"
        android:text="CANCELAR"
        app:layout_constraintEnd_toEndOf="@+id/txtCotenido_notaSimple"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtCotenido_notaSimple"
        app:layout_constraintTop_toBottomOf="@+id/txtCotenido_notaSimple" />

</androidx.constraintlayout.widget.ConstraintLayout>